{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": "Global Youtuber Creator",
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "./WorldMapWithGraticules.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {
        "url": "WorldMapWithGraticules.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
    },
    {
      "data": {
        "url": "../data/Global_YouTube_Statistics.csv"
      },
      "transform": [
        {
          "aggregate": [
            {"op": "count", "field": "Country", "as": "Youtuber Count"},
            {"op": "max", "field": "longitude", "as": "longitude"},
            {"op": "max", "field": "latitude", "as": "latitude"}
          ],
          "groupby": ["Country"]
        }
      ],
      "mark": {"type": "circle", "tooltip": {"content": "data"}},
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "size": {
          "field": "Youtuber Count",
          "type": "quantitative",
          "title": "Number of YouTubers",
          "scale": {"domain": [0, 300]}
        },
        "color": {
          "field": "Youtuber Count",
          "type": "quantitative",
          "title": "Number of YouTubers",
          "scale": {"scheme": "reds"}
        }
      }
    }
  ]
}
