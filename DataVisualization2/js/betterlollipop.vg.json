{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 760,
  "height": 450,
  "background": null,
  "title": "",
  "data": {
    "url": "https://raw.githubusercontent.com/ChokMingJie/FIT3179/main/DataVisualization2/data/Global_YouTube_Statistics.csv",
    "format": {"type": "csv"}
  },
  "params": [{
    "name": "numYoutuber",
    "value": 7,
    "bind": {
      "input": "range",
      "min": 2,
      "max": 10,
      "step": 1,
      "name": "Number of Youtuber: "
    }
  }],
  "transform": [
    {
      "window": [{
        "field": "subscribers",
        "op": "rank",
        "as": "rank"
      }],
      "sort": [{"field": "subscribers", "order": "descending"}]
    },
    {
      "filter": "datum.rank <= numYoutuber"
    }
  ],
  "layer": [
    {
      "mark": {"type": "bar", "size": 10},
      "encoding": {
        "y": {
          "field": "Youtuber",
          "type": "ordinal",
          "title": "Youtuber",
          "sort": "-x",
          "axis": {
            "labelFont": "'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial",
            "labelFontSize": 12
          }
        },
        "x": {
          "field": "subscribers",
          "aggregate": "max",
          "title": "Number of Subscribers",
          "axis": {
            "domain": true,
            "grid": false,
            "ticks": true,
            "titleFont": "'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial",
            "titleFontSize": 20,
            "labelFont": "'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial",
            "labelFontSize": 12
          }
        },
        "size": {"value": 13},
        "color": {
          "condition": {"test": "datum.Youtuber === 'T-Series'", "value": "darkred"},
          "value": "#FF6666"
        },
        "tooltip": [
          {"field": "Youtuber", "type": "nominal", "title": "YouTuber"},
          {"field": "Country", "type": "nominal", "title": "Country"},
          {"field": "subscribers", "type": "quantitative", "title": "Subscribers", "format": ","}
        ]
      }
    },
    {
      "mark": {"type": "point", "size": 250, "filled": true},
      "encoding": {
        "y": {
          "field": "Youtuber",
          "sort": "-x",
          "axis": {
            "titleFont": "'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial",
            "titleFontSize": 20
          }
        },
        "x": {
          "aggregate": "max",
          "field": "subscribers",
          "axis": {
            "domain": true,
            "grid": false,
            "ticks": true
          }
        },
        "size": {"value": 800},
        "color": {
          "condition": {"test": "datum.Youtuber === 'T-Series'", "value": "darkred"},
          "value": "#FF6666"
        },
        "tooltip": [
          {"field": "Youtuber", "type": "nominal", "title": "YouTuber"},
          {"field": "Country", "type": "nominal", "title": "Country"},
          {"field": "subscribers", "type": "quantitative", "title": "Subscribers", "format": ","}
        ]
      }
    }
  ],
  "config": {
    "axisX": {
      "labelAngle": 0
    },
    "view": {
      "stroke": "transparent"
    }
  }
}
